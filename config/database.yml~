  adapter: mysql
  database: gobrain_test
  username: root
  password: 123
  timeout: 5000
  socket: /var/run/mysqld/mysqld.sock

production:
  adapter: mysql
  database: gobrain_producation
  username: root
  password: 123
  timeout: 5000
  socket: /var/run/mysqld/mysqld.sock
